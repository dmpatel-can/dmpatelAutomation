<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Open Cart Test Suite" verbose="4" thread-count="4" parallel="tests">

	<listeners>
		<listener class-name="com.qa.opencart.listeners.AnnotationTransformer" />
		<listener class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener class-name="com.qa.opencart.listeners.TestAllureListener" />
	</listeners>

	<test name="Open Cart Login Page Test">
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest"/>
		</classes>
	</test>


	<test name="Open Cart MyAccount Page Test">
		<classes>
			<class name="com.qa.opencart.tests.MyAccountPageTest"/>
		</classes>
	</test>

	<test name="Open Cart ProductInfo Page Test">
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest"/>
		</classes>
	</test>

	<!-- <test name="Open Cart Register Page Test">
		<classes>
			<class name="com.qa.opencart.tests.RegisterPageTest"/>
		</classes>
	</test> -->

</suite>
